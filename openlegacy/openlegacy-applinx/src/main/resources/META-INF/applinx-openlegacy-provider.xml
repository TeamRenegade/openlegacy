<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="apxCreateSessionRequest" class="com.sabratec.applinx.baseobject.GXCreateSessionRequest" scope="prototype">
		<property name="applicationName" value="${applinx.application.name}" />
		<property name="serverURL" value="${applinx.server.url}" />
	</bean>

	<bean id="terminalConnectionFactory" class="org.openlegacy.applinx.ApxTerminalConnctionFactory" />

	<!-- APX implementation of open legacy services beans -->
	<bean id="screensRecognizer" class="org.openlegacy.applinx.ApxScreensRecognizer" />
	<bean id="fieldMappingsProvider" class="org.openlegacy.applinx.ApxRuntimeFieldMappingsProvider" />
	<bean id="hostActionMapper" class="org.openlegacy.applinx.ApxHostActionMapper" />
	<bean id="sessionNavigator" class="org.openlegacy.applinx.ApxSessionNavigator" />
	
</beans>
