<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="apxConfig" class="com.sabratec.applinx.common.designtime.model.config.GXApplicationConfiguration" scope="prototype" p:name="${applinx.application.name}">
		<property name="hostConfig">
			<bean class="com.sabratec.applinx.common.designtime.model.config.GXApplicationHostConfiguration">
				<property name="displayHostConfiguration">
					<bean class="com.sabratec.applinx.common.designtime.model.config.hosts.GXAS400HostConfiguration" 
							p:name="${applinx.application.name}" p:address="${host.address}" p:port="${host.port}" />
				</property>
			</bean>
		</property>
		<property name="repositoryConfig">
			<bean class="com.sabratec.applinx.common.designtime.model.config.GXRepositoryConfiguration" />
		</property>
	</bean>
	
	<bean id="apxCreateSessionRequest" class="com.sabratec.applinx.baseobject.GXCreateSessionRequest" scope="prototype">
		<property name="applicationName" value="#{apxConfig.name}" />
		<property name="serverURL" value="local://applinx" />
	</bean>

	<bean id="apxServerLoader" class="org.openlegacy.applinx.ApxServerLoader" p:license="${applinx.license.file}" init-method="startServer" destroy-method="stopServer"/>
	
	<bean id="terminalConnectionFactory" class="org.openlegacy.applinx.ApxTerminalConnctionFactory" />
	
</beans>
