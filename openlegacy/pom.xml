<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openlegacy</groupId>
	<artifactId>openlegacy</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Open Legacy framework</name>
	<description>Open Legacy framework is a framework for connecting to legacy system and expose their functionallity to open system using modern &amp; open standards and tools</description>
	<modules>
		<module>openlegacy-api</module>
		<module>openlegacy-impl</module>
		<module>openlegacy-applinx</module>
	</modules>

	<properties>
		<spring.framework.version>3.0.6.RELEASE</spring.framework.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<deploy.dir>file://C:\Program Files\Apache Software Foundation\Tomcat 6.0\webapps\maven2</deploy.dir>
	</properties>

	<distributionManagement>
		<site>
			<id>staging</id>
			<url>${deploy.dir}/snapshots/${project.artifactId}</url>
		</site>
		<snapshotRepository>
			<id>openlegacy</id>
			<name>Open Legacy Snapshot Repository</name>
			<url>${deploy.dir}/snapshot</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<extensions>
			<!-- Enabling the use of FTP -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-beta-6</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>