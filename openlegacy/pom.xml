<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openlegacy</groupId>
	<artifactId>openlegacy</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Open Legacy framework</name>
	<description>Open Legacy framework is a framework for connecting to legacy system and expose their functionallity to open system using modern &amp; open standards and tools</description>
	<modules>
		<module>openlegacy-api</module>
		<module>openlegacy-impl</module>
		<module>openlegacy-applinx</module>
		<module>openlegacy-test</module>
		<module>openlegacy-eclipse</module>
	</modules>

	<properties>
		<spring.framework.version>3.0.5.RELEASE</spring.framework.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<deploy.dir>C:\Program Files\Apache Software Foundation\Tomcat 6.0\webapps\maven2</deploy.dir>
	</properties>
	
	<repositories>
		<repository>
			<id>openlegacy-snaphost</id>
			<url>http://localhost/maven2/snapshot/</url>
		</repository>
	</repositories>
	
	<distributionManagement>
		<downloadUrl>http://localhosthost/maven2</downloadUrl>
		<site>
			<id>staging</id>
			<url>file://${deploy.dir}/staging/${project.artifactId}</url>
		</site>
		<repository>
			<id>openlegacy-release</id>
			<name>Open Legacy Release Repository</name>
			<url>file://${deploy.dir}/release</url>
		</repository>
		<snapshotRepository>
			<id>openlegacy-snapshot</id>
			<name>Open Legacy Snapshot Repository</name>
			<url>file://${deploy.dir}/snapshot</url>
		</snapshotRepository>
	</distributionManagement>

</project>