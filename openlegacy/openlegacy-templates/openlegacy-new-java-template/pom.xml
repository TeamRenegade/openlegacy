<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openlegacy.templates</groupId>
	<artifactId>openlegacy-new-java-template</artifactId>
	<name>OpenLegacy new Java application</name>
	<version>${project.parent.version}</version>
	<properties>
		<openlegacy-version>${project.parent.version}</openlegacy-version>
	</properties>

	<repositories>
		<repository>
			<id>openlegacy-release</id>
			<url>http://maven.openlegacy.org/maven2/release</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.7</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.openlegacy</groupId>
			<artifactId>openlegacy-Impl</artifactId>
			<version>${openlegacy-version}</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<target>
								<delete file="${project.build.directory}/${project.artifactId}.zip" failonerror="false" />
								<zip destfile="${project.build.directory}/${project.artifactId}.zip" basedir="${basedir}" excludes="target/**" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>	
	<parent>
		<groupId>org.openlegacy.templates</groupId>
		<artifactId>openlegacy-templates</artifactId>
		<version>0.5-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
</project>
