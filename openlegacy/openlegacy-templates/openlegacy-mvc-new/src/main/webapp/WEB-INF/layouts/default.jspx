<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:tiles="http://tiles.apache.org/tags-tiles"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:spring="http://www.springframework.org/tags">

<jsp:directive.page contentType="text/html;charset=UTF-8" />
<jsp:directive.page pageEncoding="UTF-8" />

<head>

  <script type="text/javascript">var djConfig = {parseOnLoad: true, isDebug: true, locale: '${fn:toLowerCase(userLocale)}'};</script>

  <spring:url value="/dj/dojo/dojo.js" var="dojo_url" />
  <script src="${dojo_url}" type="text/javascript"><!-- required for FF3 and Opera --></script>
  <script src="${spring_dojo_url}" type="text/javascript"><!-- required for FF3 and Opera --></script>
  <script language="JavaScript" type="text/javascript">dojo.require("dojo.parser");</script>

  <spring:url value="/resources/openlegacy.mvc.js" var="ol_mvc_js" />
  <script src="${ol_mvc_js}" type="text/javascript"><!-- required for FF3 and Opera --></script>

<style type="text/css">
body {
	margin: 0px;
	height: 91%;
	width: 100%;
}

.container {
	height: 80%;
	width: 100%;
	position: absolute;
	font-size: x-large;
	font-family: Helvetica, sans-serif;
	color: navy;
	left: 10%;
}

.container input {
	font-size: large;
	font-family: Helvetica, sans-serif;
	color: navy;
	height: 1.4em;
	vertical-align: middle;
}

.container table tr th ,.container table tr td {
	font-size: medium;
	font-family: Helvetica, sans-serif;
	color: navy;
}

.field label {
	position: absolute;
	white-space: nowrap;
}

.panel {
	border: 1px solid black;
	position: absolute;
}

.col_1_of_2 {
	float: left;
	width: 50%;
}

.col_2_of_2 {
	margin-left: 50%;
}

.field span,.field input {
	margin-left: 45%;
}

.menu {
	background-color: #FFD700;
	height: 100%;
	width: 200px;
	float: left;
}

.actions {
	border: 1px solid black;
	position: absolute;
	left: 45%;
	top: 3%;
	z-index: 1;
}

.actions button{
	background-color: white;
}

</style>


</head>

<body>

	<div style="width: 100%; height: 100%">

		<div id="header" style="background-color: #FFA500;">
			<tiles:insertAttribute name="header" ignore="true" />

			<tiles:insertAttribute name="actions" ignore="true" />
		</div>

		<div id="menu" class="menu">
			<tiles:insertAttribute name="menu" />
		</div>

		<div class="container">
			<tiles:insertAttribute name="body" />
		</div>

		<div id="footer"
			style="background-color: #FFA500; clear: both; text-align: center; vertical-align: top;">
			<tiles:insertAttribute name="footer" ignore="true" />
		</div>

	</div>
</body>
</html>
