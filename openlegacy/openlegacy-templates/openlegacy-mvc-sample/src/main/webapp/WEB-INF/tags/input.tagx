<jsp:root xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:fn="http://java.sun.com/jsp/jstl/functions" xmlns:spring="http://www.springframework.org/tags" xmlns:form="http://www.springframework.org/tags/form" xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.attribute name="id" type="java.lang.String" required="true" rtexprvalue="true" description="The identifier for this tag" />
<jsp:directive.attribute name="label" type="java.lang.String" required="true" rtexprvalue="true" description="The label for this tag" />
<jsp:directive.attribute name="value" type="java.lang.String" required="true" rtexprvalue="true" description="The value for this tag" />
<jsp:directive.attribute name="size" type="java.lang.Integer" required="true" rtexprvalue="true" description="The size of this tag" />
<jsp:directive.attribute name="type" type="java.lang.String" required="true" rtexprvalue="true" description="Set field type (default 'text', or 'password')" />
  
  	
	<div class="field">
		<label>${label}: </label> 
		<input type="text" id="${id}" name="${id}" value="${value}" size="${size}" maxlength="${size}" />
	</div>

</jsp:root>