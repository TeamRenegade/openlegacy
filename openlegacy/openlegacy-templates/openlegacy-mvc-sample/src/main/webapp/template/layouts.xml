<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

  <definition name="template" template="/template/template.jspx">
    <put-attribute name="header" value="/template/header.jspx" />
    <put-attribute name="menu" value="/template/menu.jspx" />
    <put-attribute name="footer" value="/template/footer.jspx" />
    <put-attribute name="actions" value="/template/actions.jspx" />
    <put-attribute name="breadcrumb" value="/template/breadcrumb.jspx" />
  </definition>

  <definition name="emulation" template="/template/template.jspx">
    <put-attribute name="header" value="/template/header.jspx" />
    <put-attribute name="footer" value="/template/footer.jspx" />
  </definition>
  
  <definition name="menu" template="/template/template.jspx">
    <put-attribute name="header" value="/template/header.jspx" />
    <put-attribute name="menu" value="/template/menu.jspx" />
    <put-attribute name="footer" value="/template/footer.jspx" />
  </definition>

  <definition name="compositeTemplate" template="/template/template.jspx">
    <put-attribute name="header" value="/template/header.jspx" />
    <put-attribute name="menu" value="/template/menu.jspx" />
    <put-attribute name="footer" value="/template/footer.jspx" />
  </definition>
  
  <definition name="view" template="/template/view.jspx">
    <put-attribute name="actions" value="/template/ajaxActions.jspx" />
  </definition>

  <definition name="flatView" template="/template/view.jspx">
  </definition>

  <definition name="public" template="/template/template.jspx">
    <put-attribute name="header" value="/template/header.jspx" />
  </definition>

</tiles-definitions>
