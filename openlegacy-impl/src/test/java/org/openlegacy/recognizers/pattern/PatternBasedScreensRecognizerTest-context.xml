<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath*:/test-basic-context.xml"/>

	<context:component-scan base-package="org.openlegacy.recognizers.pattern.mock" />

	<bean id="terminalConnectionFactory"
		class="org.openlegacy.terminal.mock.MockTerminalConnectionFactory">
		<property name="root" value="/apps/inventory/screens" />
		<property name="files">
			<list>
				<value>SignOn.xml</value>
				<value>MainMenu.xml</value>
			</list>
		</property>
	</bean>
	 
	<bean id="screensRecognizer" class="org.openlegacy.recognizers.PatternBasedScreensRecognizer" p:ignoreChars=" ._=-;&quot;">
		<property name="positions">
			<list>
				<bean class="org.openlegacy.terminal.support.TerminalPositionBean" p:row="1" p:column="36" />
			</list>
		</property>
	</bean>

</beans>
