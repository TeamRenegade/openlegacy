<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath*:/test-basic-context.xml" />

	<context:component-scan base-package="org.openlegacy.terminal.support.mock" />

	<bean id="terminalConnectionFactory"
		class="org.openlegacy.terminal.mock.MockTerminalConnectionFactory">
		<property name="root" value="/org/openlegacy/terminal/support/mock" />
		<property name="files">
			<list>
				<value>DateScreen.xml</value>
				<value>DateScreen-out.xml</value>
			</list>
		</property>
	</bean>

</beans>
