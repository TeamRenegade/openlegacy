<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath*:/META-INF/openlegacy-standalone-context.xml"/>

	<bean id="screensRecognizer" class="org.openlegacy.recognizers.RegistryBasedScreensRecognizer" />
	<bean id="fieldMappingsProvider" class="org.openlegacy.terminal.support.providers.RegistryBasedFieldMappingsProvider" />
	<bean id="sessionNavigator" class="org.openlegacy.terminal.support.DefaultSessionNavigator" />
	
	<bean id="terminalSessionModules" class="org.openlegacy.support.HostSessionModules" scope="session">
		<property name="modules">
			<list>
				<bean class="org.openlegacy.terminal.modules.trail.HostSessionTrailModuleImpl">
					<property name="sessionTrail">
						<bean class="org.openlegacy.terminal.modules.trail.DefaultTerminalTrail" p:historyCount="5" />
					</property>
				</bean>	
				<bean class="org.openlegacy.terminal.modules.login.DefaultLoginModule" />
			</list>
		</property>
	</bean>
	
	<!-- 
	<bean id="screenEntityBinder" class="org.openlegacy.terminal.support.DefaultScreenEntityBinder" />
	<bean id="trailWriter" class="org.openlegacy.terminal.support.trail.XmlTrailWriter" />
 	-->

</beans>
