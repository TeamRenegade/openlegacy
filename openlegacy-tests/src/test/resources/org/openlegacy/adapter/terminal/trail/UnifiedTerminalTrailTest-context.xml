<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath*:/test-common-context.xml" />

	<bean id="terminalSession" class="org.openlegacy.terminal.TerminalSession" scope="session" factory-bean="apxTerminalSessionFactory" factory-method="getSession" destroy-method="disconnect">
		<property name="sessionTrail">
			<bean class="org.openlegacy.adapter.terminal.trail.UnifiedTerminalTrail" />
		</property>
	</bean>

</beans>
